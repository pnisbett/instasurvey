<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddQuestionActivity"

    tools:showIn="@layout/activity_add_question">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorContent">


            <Button
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:text="Save" />

            <TextView
                android:id="@+id/tvsnum"
                android:textColor="@color/colorPrimary"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Enter a Survey Number for this question" />

            <EditText
                android:id="@+id/etsid"
                android:layout_width="30dp"
                android:layout_height="25dp"

                android:inputType="number"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rectangle"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvqseq"
                android:textColor="@color/colorPrimary"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Enter a Question Sequence for this question" />

            <EditText
                android:id="@+id/etqseq"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="number"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="" />

            <TextView
                android:id="@+id/tvq"
                android:textColor="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Type a Question" />

            <EditText
                android:id="@+id/etq"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="" />

            <TextView
                android:id="@+id/tvinfo"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"

                android:text="Answers (Up to 5) " />

            <TextView
                android:id="@+id/tvinfo1"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"

                android:layout_width="350dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Length must be less than 31 characters" />

            <TextView
                android:id="@+id/tva1"
                android:textColor="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Type Answer 1" />

            <EditText
                android:id="@+id/eta1"
                android:layout_width="215dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text=""
                android:background="@drawable/rectangle" />

            <TextView
                android:id="@+id/textViewa2"
                android:textColor="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Type Answer 2" />

            <EditText
                android:id="@+id/eta2"
                android:layout_width="215dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="" />

            <TextView
                android:id="@+id/textViewa3"
                android:textColor="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Type Answer3" />

            <EditText
                android:id="@+id/eta3"
                android:layout_width="215dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text=""
                android:background="@drawable/rectangle" />


            <TextView
                android:id="@+id/textViewa4"
                android:textColor="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Type Answer 4" />

            <EditText
                android:id="@+id/eta4"
                android:layout_width="215dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="" />

            <TextView
                android:id="@+id/textViewa5"
                android:textColor="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:text="Type Answer 5" />

            <EditText
                android:id="@+id/eta5"
                android:layout_width="215dp"
                android:layout_height="25dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:text="" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
